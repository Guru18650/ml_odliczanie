<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ml_odliczanie.EventCreator"
             Title="EventCreator">
    <StackLayout Padding="20">
        <Label Text="Nazwa"></Label>
        <Entry x:Name="nameEntry"></Entry>
        <Label Text="Data"></Label>
        <DatePicker x:Name="Datepick"></DatePicker>
        <Label Text="Czas"></Label>
        <TimePicker x:Name="Timepick"></TimePicker>
        <Button Text="Dodaj" Margin="0,10,0,0" x:Name="dodajBtn" Clicked="dodajBtn_Clicked"></Button>
    </StackLayout>
</ContentPage>